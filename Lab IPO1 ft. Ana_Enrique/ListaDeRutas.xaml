<Window x:Class="Lab_IPO1_ft.Ana_Enrique.ListaDeRutas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_IPO1_ft.Ana_Enrique"
        mc:Ignorable="d"
        Title="ListaDeRutas" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="55*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="392*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="Listarutas" Grid.RowSpan="2" Margin="0,49,0,0"  d:ItemsSource="{d:SampleData ItemCount=5}" BorderThickness="1,2,1,2" SnapsToDevicePixels="True" IsSynchronizedWithCurrentItem="True" Background="#FF97B994" SelectionChanged="Listarutas_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="32" Height="37"
                                           Source="{Binding Imagenlista}"/>
                            <TextBlock Text="{Binding Nombre}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>

                        </StackPanel>
                    </DataTemplate>

                </ListBox.ItemTemplate>

            </ListBox>
            <GridSplitter 
                                  HorizontalAlignment="Stretch" 
                                  Width="5" Grid.ColumnSpan="2" Margin="296,0,0,0" Grid.RowSpan="2"/>
            <StackPanel x:Name="spDetallesRutas" 
                                Grid.Column="1"
                                Orientation="Vertical" Grid.ColumnSpan="2" Margin="5,49,0,0" Grid.RowSpan="2">
                <Image x:Name="mapa" Height="120" Width="100" 
                               Stretch="Fill"
                               Source="{Binding SelectedItem.mapa, ElementName=Listarutas}"/>


            </StackPanel>
            <Rectangle Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="49" Stroke="Black" VerticalAlignment="Center" Width="800" Fill="#FFBBBFBC"/>
            <Button x:Name="Btn_AñadirRuta" Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Height="49" Width="49" Margin="354,0,0,2" Grid.Column="2" Background="{x:Null}" BorderBrush="#FF7D7B7B" FontSize="36"/>
            <Button x:Name="Btn_BorrarRuta" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Width="49" Height="48" Margin="403,0,0,0" Grid.Column="2" Background="{x:Null}" BorderBrush="#FF7B7B7B" FontSize="30"/>
            <Button x:Name="Btn_Ayuda" Content="?" HorizontalAlignment="Left" VerticalAlignment="Center" Height="48" Width="50" Click="Btn_Ayuda_Click" Margin="452,0,0,0" Grid.Column="2" Background="{x:Null}" FontSize="24" BorderBrush="#FF7B7B7B"/>
            <TextBox x:Name="txbBuscar" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="16,0,0,0" TextWrapping="Wrap" Text="Buscar una ruta" VerticalAlignment="Center" Width="564" Height="29" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#FF888181" KeyUp="txbBuscar_KeyUp"/>
        </Grid>
    </Grid>
</Window>
